<% if collection.any? %>
  <section id="index-projects">
    <div class="biovision-slider">
      <button class="prev"></button>
      <ul>
        <% collection.each do |entity| %>
          <li>
            <div>
              <figure role="group">
                <%= project_image_medium(entity) %>
                <figcaption><%= project_link(entity) %></figcaption>
              </figure>
              <div class="lead"><%= entity.lead %></div>
            </div>
          </li>
        <% end %>
      </ul>
      <button class="next"></button>
    </div>
  </section>
<% end %>
