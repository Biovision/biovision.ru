<%= form_with model: entity, html: { id: 'project-form' } do |f| %>
  <%= render partial: 'shared/list_of_errors', locals: { entity: entity } %>

  <dl>
    <dt><%= f.label :priority %></dt>
    <dd>
      <%= f.number_field :priority, id: :project_priotiy, in: Project::PRIORITY_RANGE, required: true %>
    </dd>

    <dt><%= f.label :name %></dt>
    <dd>
      <%=
        f.text_field(
            :name,
            id:        :project_title,
            size:      nil,
            maxlength: Project::NAME_LIMIT,
            required:  true,
            data:      { transliterate: :project_slug }
        )
      %>
      <div class="guideline"><%= t('.guidelines.name') %></div>
    </dd>

    <dt><%= f.label :slug %></dt>
    <dd>
      <%=
        f.text_field(
            :slug,
            id:        :project_slug,
            size:      nil,
            maxlength: Project::SLUG_LIMIT,
            required:  true
        )
      %>
      <div class="guideline"><%= t('.guidelines.slug') %></div>
    </dd>

    <dt><%= f.label :image %></dt>
    <dd>
      <figure class="preview" id="project-image">
        <% if entity.image.blank? %>
          <%= f.label :image, image_tag('biovision/base/placeholders/image.svg') %>
        <% else %>
          <%= f.label :image, image_tag(entity.image.big.url) %>
        <% end %>
        <figcaption>
          <%= f.file_field :image, id: :project_image, accept: 'image/jpeg,image/png', data: { image: 'project-image' } %>
        </figcaption>
      </figure>
      <div class="guideline"><%= t('.guidelines.image') %></div>
    </dd>

    <dt><%= f.label :image_alt_text %></dt>
    <dd>
      <%= f.text_field :image_alt_text, id: :project_image_alt_text, size: nil, maxlength: Project::IMAGE_ALT_LIMIT %>
      <div class="guideline"><%= t('.guidelines.image_alt_text') %></div>
    </dd>

    <dt><%= f.label :lead %></dt>
    <dd>
      <%= f.text_field :lead, id: :project_lead, size: nil, maxlength: Project::LEAD_LIMIT %>
      <div class="guideline"><%= t('.guidelines.lead') %></div>
    </dd>

    <dt><%= f.label :url %></dt>
    <dd>
      <%=
        f.url_field(
            :url,
            id:          :project_url,
            size:        nil,
            maxlength:   Project::URL_LIMIT,
            placeholder: t('.placeholders.url')
        )
      %>
      <div class="guideline"><%= t('.guidelines.url') %></div>
    </dd>

    <dt><%= f.label :description %></dt>
    <dd>
      <%= f.text_area :description, id: :project_description, cols: 20, rows: 25 %>
    </dd>

    <dt><%= t(:flags) %></dt>
    <dd>
      <ul class="flags">
        <li>
          <%= f.check_box :visible, id: :project_visible %>
          <%= f.label :visible %>
        </li>
        <li>
          <%= f.check_box :highlight, id: :project_highlight %>
          <%= f.label :highlight %>
        </li>
      </ul>
    </dd>
  </dl>

  <div class="buttons">
    <%= f.button t(:save), type: :submit %>
  </div>
<% end %>

<script src="//cdn.ckeditor.com/4.8.0/full/ckeditor.js"></script>
<script>
    'use strict';

    document.addEventListener('DOMContentLoaded', function () {
        const editor = document.getElementById('project_description');

        CKEDITOR.replace(editor, {
            filebrowserUploadUrl: '/media_files/ckeditor',
            removePlugins: 'forms,save,preview,flash,bidi,language,print,templates,newpage,iframe,about,scayt,wsc'
        });
    });
</script>
