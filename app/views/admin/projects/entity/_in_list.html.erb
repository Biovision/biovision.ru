<div class="image">
  <%= project_image_preview(entity) %>
</div>
<div class="data">
  <div><%= admin_project_link(entity) %></div>
  <div class="info">
    <%= entity.slug %>
  </div>
  <% unless entity.url.blank? %>
    <div class="secondary info">
      <%= entity.url %>
    </div>
  <% end %>
  <div class="secondary info">
    <%= entity.lead %>
  </div>

  <%=
    render(
        partial: 'shared/admin/toggleable',
        locals:  { entity: entity, url: toggle_admin_project_path(entity) }
    )
  %>

  <ul class="actions">
    <li><%= edit_icon(edit_project_path(entity.id)) %></li>
    <%=
      render(
          partial: 'shared/actions/priority_changer',
          locals:  { path: priority_admin_project_path(entity.id) }
      )
    %>
  </ul>
</div>
